{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/graphql-server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "db.cjs"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/graphql-server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ]
}
